<form method="post" action="{{ path('jugador_delete', {'idjugador': jugador.idjugador}) }}" onsubmit="return confirm('Seguro que quieres borrarlo?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ jugador.idjugador) }}">
    <button class="btn btn-primary">Borrar</button>
</form>

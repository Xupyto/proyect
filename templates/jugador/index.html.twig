{% extends 'base.html.twig' %}

{% block title %}Lista de jugadores{% endblock %}

{% block body %}
    <h1 class="titulo">Lista de jugadores</h1>

    <table class="table table table-hover table-dark titulo">
        <thead>
            <tr>
                <th>Id jugador</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for jugador in jugadors %}
            <tr>
                <td>{{ jugador.idjugador }}</td>
                <td>{{ jugador.nombre }}</td>
                <td>
                    
                    <a class="btn btn-primary"  href="{{ path('jugador_edit', {'idjugador': jugador.idjugador}) }}">Editar</a>
                     {{ include('jugador/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay resultados.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 {# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(jugadors) }}
</div>
    <a class="btn btn-primary crear" href="{{ path('jugador_new') }}">Crear nuevo</a>
{% endblock %}

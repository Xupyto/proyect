{% extends 'base.html.twig' %}

{% block title %}Listado Pokemon - Formato{% endblock %}

{% block body %}
    <h1 class="titulo">Listado Pokemon - Formato </h1>

    <table class="table table-hover table-dark titulo">
        <thead>
            <tr>

               
                <th>Pokemon</th>
                <th>Formato</th>
                <th>Porcentaje de Uso</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for pokemon_esta_en_formato in pokemon_esta_en_formatos %}
            <tr>
                
                <td>{{ pokemon_esta_en_formato.pokemonIdpoke.nombre }}</td>
                <td>{{ pokemon_esta_en_formato.formato.nombre }}</td>
                <td>{{ pokemon_esta_en_formato.porcentajeUso }} %</td>
                <td>
                   <a class="btn btn-primary" href="{{ path('pokemon_esta_en_formato_edit', {'formato': pokemon_esta_en_formato.formato.Id, 'poke': pokemon_esta_en_formato.pokemonIdpoke.idpoke}) }}">Editar</a>
                    {{ include('pokemon_esta_en_formato/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay resultados.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pokemon_esta_en_formatos) }}
</div>

    <a class="btn btn-primary crear" href="{{ path('pokemon_esta_en_formato_new') }}">Crear nuevo</a>
{% endblock %}

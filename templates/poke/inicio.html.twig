{% extends 'base.html.twig' %}

{% block body %}

 {{ render(controller(
          'App\\Controller\\PokeController::filtro_formato'
      )) }}

<table id="princi" class="table table-striped table-dark titulo">
        <thead class="thead-dark">
            <tr  class="table-info">
                <th scope="col"> Nombre</th>
                {% if is_granted('ROLE_ADMIN') %}
                <th scope="col">Acciones</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% set i = 0 %}
        {% for poke in pokes %}
            <tr> 
          
                <td><img width="100" heigh="100" class="show" src="{{ asset('imagenes//'~ poke.foto) }}" alt="{{poke.nombre}}"><a class="action" href="{{ path('poke_show_in', {'idpoke': poke.idpoke }) }}">{{ poke.nombre }}</a> </td>
                 {% if is_granted('ROLE_ADMIN') %}
                <td> <a class="btn btn-primary" href="{{ path('poke_edit', {'idpoke': poke.idpoke}) }}">Editar</a>
               {{ include('poke/_delete_form.html.twig') }}</td>
                {% endif %}
               
            </tr>
            {% set i = i + 1  %}
        {% else %}
            <tr>
                <td colspan="2">No hay pokemon.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pokes) }}
</div>
    {% if is_granted('ROLE_ADMIN') %}
    <a class="btn btn-primary crear" href="{{ path('poke_new') }}">Crear nuevo poke</a>
 {% endif %}

{% endblock %}

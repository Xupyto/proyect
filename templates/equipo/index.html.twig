{% extends 'base.html.twig' %}

{% block title %}Listado de equipos{% endblock %}

{% block body %}
    <h1  class="titulo">Listado de equipos</h1>

    <table class="table table-hover table-dark titulo">
        <thead>
            <tr>
                <th>Id equipo</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for equipo in equipos %}
            <tr>
                <td>{{ equipo.idequipo }}</td>
                <td>{{ equipo.nombre }}</td>
                <td>                    
                    <a class="btn btn-primary" href="{{ path('equipo_edit', {'idequipo': equipo.idequipo}) }}">Editar</a>
                    {{ include('equipo/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay resultados.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(equipos) }}
</div>

    <a class="btn btn-primary crear" href="{{ path('equipo_new') }}">Crear nuevo</a>
{% endblock %}

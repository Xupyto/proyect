{% extends 'base.html.twig' %}

{% block title %}Listado de objetos{% endblock %}

{% block body %}
    <h1 class="titulo">Listado de objetos</h1>

    <table class="table table table-hover table-dark titulo">
        <thead>
            <tr>
                <th>Id objeto</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for objeto in objetos %}
            <tr>
                <td>{{ objeto.idobjeto }}</td>
                <td>{{ objeto.nombre }}</td>
                <td>
                   
                    <a class="btn btn-primary" href="{{ path('objeto_edit', {'idobjeto': objeto.idobjeto}) }}">Editar</a>
                    
                    {{ include('objeto/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay resultados.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     {# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(objetos) }}
</div>

    <a class="btn btn-primary crear" href="{{ path('objeto_new') }}">Crear nuevo</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Listado de jugadores en campeonatos{% endblock %}

{% block body %}
    <h1 class="titulo">Listado de jugadores en campeonatos</h1>

    <table class="table table-hover table-dark titulo">
        <thead>
            <tr>
                <th>Campeonato</th>
                <th>Jugador</th>
                <th>Pokemon</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for jugador_pokes_campeonato in jugador_pokes_campeonatos %}
            <tr>
                <td>{{ jugador_pokes_campeonato.campeonatoIdcampeonato.nombre }}</td>
                <td>{{ jugador_pokes_campeonato.jugadorIdjugador.nombre }}</td>
                <td>{{ jugador_pokes_campeonato.pokemonIdpoke.nombre }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('jugador_pokes_campeonato_show', {'campeonato': jugador_pokes_campeonato.campeonatoIdcampeonato.idcampeonato,
'jugador': jugador_pokes_campeonato.jugadorIdjugador.idjugador, 'poke': jugador_pokes_campeonato.pokemonIdpoke.idpoke}) }}">Mostrar</a>
                    <a class="btn btn-primary" href="{{ path('jugador_pokes_campeonato_edit', {'campeonato': jugador_pokes_campeonato.campeonatoIdcampeonato.idcampeonato,
'jugador': jugador_pokes_campeonato.jugadorIdjugador.idjugador, 'poke': jugador_pokes_campeonato.pokemonIdpoke.idpoke}) }}">Editar</a>
                     {{ include('jugador_pokes_campeonato/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(jugador_pokes_campeonatos) }}
</div>
     <a class="btn btn-primary crear" href="{{ path('jugador_pokes_campeonato_new') }}">Crear nuevo</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Listado de spread{% endblock %}

{% block body %}
    <h1 class="titulo">Listado de spread</h1>

    <table class="table table-hover table-dark titulo">
        <thead>
            <tr>
                <th>Id spread</th>
                <th>Estad√≠sticas</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for spread in spreads %}
            <tr>
                <td>{{ spread.idspread }}</td>
                <td>{{ spread.stats }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('spread_edit', {'idspread': spread.idspread}) }}">Editar</a>
                    {{ include('spread/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay resultados.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(spreads) }}
</div>
    <a class="btn btn-primary" href="{{ path('spread_new') }}">Crear nuevo</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Listado de artículos{% endblock %}

{% block body %}
    <h1 class="titulo">Listado de artículos</h1>

    <table class="table table-hover table-dark titulo">
        <thead>
            <tr>
                <th>Id artículo</th>
                <th>Título</th>
                <th>Foto</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for articulo in articulos %}
            <tr>
                <td>{{ articulo.idarticulo }}</td>
                <td>{{ articulo.titulo }}</td>
                <td>{{ articulo.foto }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('articulo_show', {'idarticulo': articulo.idarticulo}) }}">Mostrar</a>
                    <a class="btn btn-primary" href="{{ path('articulo_edit', {'idarticulo': articulo.idarticulo}) }}">Editar</a>
                    {{ include('articulo/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay resultados.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(articulos) }}
</div>

    <a class="btn btn-primary crear" href="{{ path('articulo_new') }}">Crear nuevo</a>
{% endblock %}

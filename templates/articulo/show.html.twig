{% extends 'base.html.twig' %}

{% block title %}Artículo {{ articulo.idarticulo }}{% endblock %}

{% block body %}
   
<div id="mostrarnoticia">
    <img class="show" src="{{ asset('imagenes//noticias//'~ articulo.foto) }}" alt="{{articulo.foto}}">
</div>
    <table class="table table-hover table-dark titulo">
        <tbody>
            <tr>
                <th>Id artículo</th>
                <td>{{ articulo.idarticulo }}</td>
            </tr>
            <tr>
                <th>Título</th>
                <td>{{ articulo.titulo }}</td>
            </tr>
            <tr>
                <th>Contenido</th>
                <td>{{ articulo.contenido }}</td>
            </tr>
            
        </tbody>
    </table>

    <a class="btn btn-primary left" href="{{ path('articulo_index') }}">Volver al listado</a>

    <a class="btn btn-primary" href="{{ path('articulo_edit', {'idarticulo': articulo.idarticulo}) }}">Editar</a>

    {{ include('articulo/_delete_form.html.twig') }}
{% endblock %}
